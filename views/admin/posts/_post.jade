.post
  h2
    span.title= post.title
    a.edit(href='/admin/posts/' + post.id + '/edit') Edit

  != messages()
  p.datetime.created Created at #{helper.formatDate(post.createdAt)}
  - if (post.updatedAt)
    p.datetime.updated Updated at #{helper.formatDate(post.updatedAt)}

  pre.content!= post.content
