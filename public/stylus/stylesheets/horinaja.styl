.horinaja ul
  position relative
  li
    background transparent
    display none
    top 0
  li:first-child
    display block
ol.horinaja_pagination
  height 40px
  margin 0 auto
  position relative
  background transparent
  padding 5px 0 0 0
  clear both
  li
    float left
    height 40px
    display block
    a
      height 30px
      display block
      background transparent
      float left
      color black
      font-weight bold
      text-align center
      font-size 12px
      padding 10px 0 0 0
      cursor pointer
      font-weight bold
      &:hover
        color #195D87